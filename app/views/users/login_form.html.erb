<div class="main">
    <div class="container">
        <div class="form-heading"> <!-- ログインのヘッダー -->
            ログイン
        </div>
        <div class="form"> 
            <div class="form-body">
                <% if @error_message %>
                    <div class="form-error">
                        <%= @error_message %>
                    </div>
                <% end %>
                
                <%= form_tag("/login") do %>  <!--loginにフォームの値を送信-->
                    <p>メールアドレス</p>
                    <input name="email" value="<%= @email %>" placeholder="メールアドレスを入力して下さい">
                    <p>パスワード</p>
                    <input name="password" type="password" value="<%= @password %>">
                    <input type="submit" value="ログイン">
                <% end %>
            </div>
        </div>
    </div>
</div>